package Test;

import java.util.Scanner;

public class Main {
    public static void main(String[] args) {

        int number, total = 0;
        Scanner scan = new Scanner(System.in);

        System.out.print("Enter a number: ");
        number = scan.nextInt();

        for (int i = 0; i <= number; i++) {
                if (i % 4 == 0) {
                    total += i;
                }
        }
        System.out.println(total);
    }
}
